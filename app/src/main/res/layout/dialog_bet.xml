<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_md">

    <TextView
        android:id="@+id/labelOverUnder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_lg"
        android:fontFamily="@font/roboto_medium"
        android:text="Over"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgTeamLogo"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/margin_lg" />


    <EditText
        android:id="@+id/etBetAmout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_lg"
        android:layout_marginTop="@dimen/margin_lg"
        android:layout_marginEnd="@dimen/margin_lg"
        android:background="@color/grey"
        android:gravity="center"
        android:visibility="gone"
        android:hint="Coins"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/radioBetAmout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_lg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/minAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginLeft="@dimen/margin_lg"
            android:layout_marginRight="@dimen/margin_md" />

        <RadioButton
            android:id="@+id/maxAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lg"
            android:layout_marginRight="@dimen/margin_md" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvTotalCoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_md"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="@dimen/margin_lg"
        android:paddingEnd="@dimen/margin_lg"
        android:visibility="gone"
        android:text="Your coin : 1299" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_lg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Cancel"
            android:background="@color/grey"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvBet"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Bet"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>